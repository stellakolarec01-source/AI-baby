import random

# List of potential character traits
names = ['Alice', 'John', 'Elena', 'Max', 'Sophia', 'Leo', 'Carmen', 'Rafael', 'Nina', 'Ethan']
ages = [25, 32, 40, 50, 60, 28, 19, 35]
occupations = ['doctor', 'teacher', 'engineer', 'musician', 'writer', 'actor', 'chef', 'scientist', 'police officer', 'artist']
locations = ['a small village', 'a bustling city', 'a quiet suburban neighborhood', 'a remote mountain town', 'a seaside resort', 'an underground bunker', 'a space station']
conflicts = ['facing a life-threatening illness', 'dealing with a past trauma', 'on the run from the law', 'hiding from an unknown enemy', 'seeking redemption for past mistakes', 'struggling with a personal loss']
goals = ['to find true love', 'to uncover a hidden secret', 'to save their family', 'to achieve greatness in their field', 'to build a new life', 'to get revenge on an old enemy']

# Function to generate a random backstory
def generate_backstory():
    name = random.choice(names)
    age = random.choice(ages)
    occupation = random.choice(occupations)
    location = random.choice(locations)
    conflict = random.choice(conflicts)
    goal = random.choice(goals)

    # Create the backstory
    backstory = f"{name}, a {age}-year-old {occupation}, lives in {location}. They have spent their life trying to {goal}, but currently they are {conflict}. This challenge has shaped their view of the world, pushing them to make difficult choices. Despite the odds, they continue to pursue their dream, hoping for a better future."

    return backstory

# Example usage
if __name__ == "__main__":
    print(generate_backstory())
